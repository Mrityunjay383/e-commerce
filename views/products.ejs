<%- include("partials/header") %>

<section class="minHeight">
  <div class="products">
    <% for(let product of products){%>
        <div class="product">
          <h2><%= product.title%></h2>
          <p>RS. <%= product.price%></p>
          <%product.des = product.des.substring(0, 100)%>
          <p><%= product.des%>...</p>
          <form class="" action="/addtocart" method="post">
            <button type="submit" name="productID" value=<%= product._id%>>Add to cart</button>
          </form>
        </div>
    <%}%>
  </div>
</section>

<% include("partials/footer") -%>
